# Django Core Settings
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-dwxbee2xv-m3o-w7-+nl&q01q^0@0^il2vg&=oh*n8mx6p-u(i
# NEVER set DEBUG to True in production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.yourdomain.com

# Environment Type
# Options: development, staging, production
ENVIRONMENT=development

# Database Configuration - PostgreSQL (Recommended for Production)
DATABASE_URL=postgresql://user:password@localhost:5432/securecms_db
# Alternative MySQL for PythonAnywhere:
# DATABASE_URL=mysql://username:password@username.mysql.pythonanywhere-services.com/username$securecms

# For PythonAnywhere specifically:
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=username$securecms
# DB_USER=username
# DB_PASSWORD=your-mysql-password
# DB_HOST=username.mysql.pythonanywhere-services.com
# DB_PORT=3306

# Security Headers & CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Email Configuration (for password reset & notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Two-Factor Authentication
# SMS gateway if needed
TWO_FACTOR_CALL_GATEWAY=None
TWO_FACTOR_SMS_GATEWAY=None
# Display name in authenticator apps
OTP_TOTP_ISSUER=SecureCMS

# Static & Media Files
STATIC_ROOT=/home/username/securecms/static
MEDIA_ROOT=/home/username/securecms/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Security Keys & Tokens
JWT_SECRET_KEY=different-from-django-secret-key-generate-separately
CLOUDFLARE_TURNSTILE_SITE_KEY=your-turnstile-site-key
CLOUDFLARE_TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Rate Limiting
# Max login attempts
AXES_FAILURE_LIMIT=5
# Hours to wait after lockout
AXES_COOLOFF_TIME=1
RATELIMIT_ENABLE=True

# Sentry Error Tracking (Optional but Recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' https://cdn.jsdelivr.net
CSP_STYLE_SRC='self' 'unsafe-inline' https://fonts.googleapis.com
CSP_FONT_SRC='self' https://fonts.gstatic.com

# Session Security
# HTTPS only
SESSION_COOKIE_SECURE=True
# No JS access
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
# Force HTTPS
SECURE_SSL_REDIRECT=True

# Django Defender Settings
DEFENDER_LOGIN_FAILURE_LIMIT=5
# Seconds
DEFENDER_COOLOFF_TIME=600

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# PythonAnywhere Specific (if deploying there)
PYTHONANYWHERE_USERNAME=your-pythonanywhere-username
PYTHONANYWHERE_DOMAIN=your-pythonanywhere-domain.pythonanywhere.com